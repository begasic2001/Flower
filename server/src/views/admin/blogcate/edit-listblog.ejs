<%- include ('../../layouts/header'); -%>
    <%- include ('../../layouts/sidebar'); -%>
        <!-- ########## START: MAIN PANEL ########## -->
        <div class="sl-mainpanel">
            <nav class="breadcrumb sl-breadcrumb">
                <a class="breadcrumb-item" href="index.html">Starlight</a>
                <span class="breadcrumb-item active">Sửa bài viết</span>
            </nav>

            <div class="sl-pagebody">
                <div class="card pd-20 pd-sm-40">
                    <h6 class="card-body-title">Sửa bài viết mới
                        <a href="/api/blog/updateListBlogCategory" class="btn btn-success btn-sm pull-right">Tất cả bài viết</a>
                    </h6>

                    <form action="/api/blog/updateListBlogCategory?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="form-layout">
                            <% if(typeof error !='undefined' ) { %>
                                <% error.details.forEach(function(error) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <%= error.message %>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                    </div>
                                    <% }) %>
                                        <% } %>
                                            <div class="row mg-b-25">
                                                <div class="col-lg-4">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Tên tiêu đề (English): <span
                                                                class="tx-danger">*</span></label>
                                                        <input class="form-control" type="text" name="post_en" value="<%= listBlog.post_en %>" >
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Tên tiêu đề: <span
                                                                class="tx-danger">*</span></label>
                                                        <input class="form-control" type="text" name="post_vn" value="<%= listBlog.post_vn %>">
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group mg-b-10-force">
                                                        <label class="form-control-label">Danh mục bài viết: <span
                                                                class="tx-danger">*</span></label>
                                                        <select class="form-control select2" name="categories_id">
                                                            <option label="Chọn danh mục"></option>
                                                            <% category.map(function(cate){ %>
                                                                <option value="<%= cate.id %>"  <% if(cate.id==listBlog.post_category.id){ %>
                                                                    selected="selected"
                                                                    <%} %>><%= cate.cat_name_vn %></option>
                                                                <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-group mg-b-10-force">
                                                        <label class="form-control-label">Nội dung bài viết (English): <span class="tx-danger">*</span></label><br>
                                                         <textarea name="details_en" id="summernote" cols="30" rows="10"><%= listBlog.details_en %></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-group mg-b-10-force">
                                                        <label class="form-control-label">Nội dung bài viết: <span class="tx-danger">*</span></label><br>
                                                        <textarea name="details_vn" id="summernote1" cols="30" rows="10"><%= listBlog.details_vn %></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Hình hiện tại</label>
                                                        <% if (listBlog.post_image) { %>
                                                        <p><img src="<%= listBlog.post_image %>" width="100px" height="100px"></p>
                                                        <% }else{ %>
                                                            <p>Chưa có hình</p>
                                                        <% }%>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-control-label">Hình 1: <span
                                                                class="tx-danger">*</span></label><br>
                                                        <label class="custom-file">
                                                            <input type="file" id="file" class="custom-file-input"
                                                                name="image" onchange="readURL(this);">
                                                            <span class="custom-file-control"></span>
                                                            <img src="#" id="one">
                                                        </label>

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                    
                                                    <input type="hidden" class="form-control" name="lpid" value="<%= listBlog.id %>">
                        
                                                </div>
                                            </div>
                                                <div class="form-layout-footer">
                                                    <button class="btn btn-info mg-r-5">Submit Form</button>
                                                </div><!-- form-layout-footer -->

                                          
                        </div><!-- form-layout -->
                    </form>
                </div><!-- card -->



            </div><!-- sl-pagebody -->

        </div><!-- sl-mainpanel -->
        <!-- ########## END: MAIN PANEL ########## -->



