<%- include ('../../layouts/header'); -%>
<%- include ('../../layouts/sidebar'); -%>
<!-- ########## START: MAIN PANEL ########## -->
<div class="sl-mainpanel">
    <nav class="breadcrumb sl-breadcrumb">
      <a class="breadcrumb-item" href="index.html">Starlight</a>
      <span class="breadcrumb-item active">Data Table</span>
    </nav>

    <div class="sl-pagebody">
      <div class="sl-page-title">
        <h5>Danh sách giao hàng</h5>
      </div><!-- sl-page-title -->

      <div class="card pd-20 pd-sm-40">
        <h6 class="card-body-title">Danh sách giao hàng</h6>
        <div class="table-wrapper">
            <table id="datatable1" class="table display responsive nowrap">
              <thead>
                <tr>
                  <th class="wd-15p">STT</th>
                  <th class="wd-15p">Tên Khách Nhận</th>
                  <th class="wd-20p">SĐT Người Nhận</th>
                  <th class="wd-15p">Email Người Nhận</th>
                  <th class="wd-15p">Địa Chỉ Người Nhận</th>
                  <th class="wd-10p">Thành Phố</th>
                </tr>
              </thead>
              <tbody>
                <% shipping.map(function(c, index){%> 
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= c.ship_name%></td>
                  <td><%= c.ship_phone %></td>
                  <td><%= c.ship_email %></td>
                  <td><%= c.ship_address %></td>
                  <td><%= c.ship_city %></td>
                </tr>
                <% }); %> 
              </tbody>
            </table>
        </div><!-- table-wrapper -->
      </div><!-- card -->
    </div><!-- sl-pagebody -->
  </div><!-- sl-mainpanel -->
  <script src="/lib/jquery/jquery.js"></script>
    <script src="/lib/popper.js/popper.js"></script>
    <script src="/lib/bootstrap/bootstrap.js"></script>
    <script src="/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <script src="/lib/highlightjs/highlight.pack.js"></script>
    <script src="/lib/datatables/jquery.dataTables.js"></script>
    <script src="/lib/datatables-responsive/dataTables.responsive.js"></script>
    <script src="/lib/select2/js/select2.min.js"></script>

    <script src="/js/starlight.js"></script>
    <script>
        $('#datatable1').DataTable({
          responsive: true,
          language: {
            searchPlaceholder: 'Search...',
            sSearch: '',
            lengthMenu: '_MENU_ items/page',
          }
        });
    </script>
    </body>
</html>