        <script>
            $(document).on("click", "#delete", function (e) {
                e.preventDefault();
                let pid = $(this).attr("data-id");
                let filename1 = $(this).attr("data-filename1");
                let filename2 = $(this).attr("data-filename2");
                let filename3 = $(this).attr("data-filename3");
                let name = $(this).attr("data-name");
                var link = $(this).attr("href");
                swal({
                    title: `Are you Want to delete ${name} `,
                    text: "Once Delete, This will be Permanently Delete!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                }).then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: `./deleteProduct/?pid=${pid}&filename1=${filename1}&filename2=${filename2}&filename3=${filename3}`,
                            type: "DELETE",

                        }).then(() => {
                            swal("ok");
                            window.location.reload();
                        });
                    } else {
                        swal("Safe Data!");
                    }
                });
            });

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#imgPreview").attr('src', e.target.result).width(100).height(100);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $("#img").change(function () {
                readURL(this);
            });
        </script>
