<%- include ('../../layouts/header'); -%>
    <%- include ('../../layouts/sidebar'); -%>
        <!-- ########## START: MAIN PANEL ########## -->
        <div class="sl-mainpanel">
            <nav class="breadcrumb sl-breadcrumb">
                <a class="breadcrumb-item" href="index.html">Starlight</a>
                <span class="breadcrumb-item active">Thêm Sản Phẩm</span>
            </nav>

            <div class="sl-pagebody">
                <div class="card pd-20 pd-sm-40">
                    <h6 class="card-body-title">Thêm Sản Phẩm Mới
                        <a href="/api/product/product" class="btn btn-success btn-sm pull-right">Xem Sản Phẩm</a>
                    </h6>
                        <div class="form-layout">
                            <div class="row mg-b-25">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Tên sản phẩm: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.pro_name %></strong>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Mã sản phẩm: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.pro_code %></strong>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Số lượng: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.pro_quantity %></strong>
                                    </div>
                                </div> 
                                <div class="col-lg-4">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Danh mục: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.cat_name %></strong>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                        <div class="form-group mg-b-10-force">
                                            <label class="form-control-label">Danh mục con: <span class="tx-danger">*</span></label><br>
                                            <strong><%= product.subcategory_name %></strong>
                                        </div>
                                </div>
                                <div class="col-lg-4">
                                            <div class="form-group mg-b-10-force">
                                                <label class="form-control-label">Nhà cung cấp: <span class="tx-danger">*</span></label><br>
                                                <strong><%= product.brand_name %></strong>
                                            </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Kích thước: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.pro_size %></strong>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Màu sắc: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.pro_color %></strong>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Giá bán: <span class="tx-danger">*</span></label><br>
                                        <strong><%= product.selling_price %></strong>
                                    </div>
                                </div>
                                    <div class="col-lg-4">
                                        <div class="form-group mg-b-10-force">
                                            <label class="form-control-label">Giá khuyến mãi: <span class="tx-danger">*</span></label><br>
                                            <input class="form-control" type="text" name="discount_price">
                                        </div>
                                    </div>
                                 <div class="col-lg-12">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Chi tiết sản phẩm: <span class="tx-danger">*</span></label><br>
                                        <strong><%- product.pro_details %></strong>
                                    </div>
                                </div>
                                <!-- <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="form-control-label">Video: <span class="tx-danger">*</span></label>
                                        <input class="form-control" name="video_link" type="text">
                                    </div>
                                </div> -->
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Hình 1: <span class="tx-danger">*</span></label><br>
                                        <label class="custom-file">
                                            <% if(product.img_one) { %>
                                                <p><img src="<%= product.img_one %>" width="100px" height="100px"></p>

                                            <%} %>
                                           
                                        </label>
                                
                                    </div>
                                </div>
                                
                                
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Hình 2: <span class="tx-danger">*</span></label><br>
                                        <label class="custom-file">
                                            <% if(product.img_two) { %>
                                            <p><img src="<%= product.img_two %>" width="100px" height="100px"></p>
                                            <%} %>
                                        </label>
                                
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Hình 3: <span class="tx-danger">*</span></label><br>
                                        <label class="custom-file">
                                            <% if(product.img_three) { %>
                                            <p><img src="<%= product.img_three %>" width="100px" height="100px"></p>
                                            <%} %>
                                        </label>
                                
                                    </div>
                                </div>
                                
                                </div>
                                
                                <hr>
                                <br><br>
                                
                                <div class="row">
                                
                                    <div class="col-lg-4">
                                        <label class="ckbox">
                                            <% if (product.main_slider ==="1" ) { %>
                                            <input type="checkbox" name="main_slider" checked value="1" disabled>
                                            <% }else{ %>
                                            <input type="checkbox" name="main_slider" value="1" disabled>
                                            <% }%>
                                            <span>Slide chính</span>
                                        </label>
                                
                                    </div>
                                
                                  
                                
                                
                                    <div class="col-lg-4">
                                        <label class="ckbox">
                                            <% if (product.best_rated ==="1" ) { %>
                                            <input type="checkbox" name="best_rated" checked value="1" disabled>
                                            <% }else{ %>
                                            <input type="checkbox" name="best_rated" value="1" disabled>
                                            <% }%>
                                            <span>Đánh giá tốt</span>
                                        </label>
                                
                                    </div>
                                        <div class="col-lg-4">
                                            <label class="ckbox">
                                                <% if (product.hot_new ==="1" ) { %>
                                                <input type="checkbox" name="hot_new" value="1" checked disabled>
                                                <% }else{ %>
                                                <input type="checkbox" name="hot_new" value="1" disabled>
                                                <% }%>
                                                <span>Hot_New</span>
                                            </label>
                                        
                                        </div>
                                
                                    <div class="col-lg-4">
                                        <label class="ckbox">
                                            <% if (product.trend ==="1" ) { %>
                                            <input type="checkbox" name="trend" value="1" checked disabled>
                                            <% }else{ %>
                                            <input type="checkbox" name="trend" value="1" disabled>
                                            <% }%>
                                            <span>Trend Product </span>
                                        </label>
                                
                                    </div>
                                
                                    <div class="col-lg-4">
                                        <label class="ckbox">
                                            <% if (product.hot_new ==="1" ) { %>
                                            <input type="checkbox" name="buyone_getone" value="1" checked disabled>
                                            <% }else{ %>
                                            <input type="checkbox" name="buyone_getone" value="1" disabled >
                                            <% }%>
                                            <span>Mua 1 Tặng 1</span>
                                        </label>
                                    
                                    </div>
                            </div>                      
                        </div><!-- form-layout -->
                </div><!-- card -->



            </div><!-- sl-pagebody -->

        </div><!-- sl-mainpanel -->
        <!-- ########## END: MAIN PANEL ########## -->
    
        

